{
  "manifest_version": 3,
  "name": "Your AI Teaching Assistant",
  "version": "1.0",
  "description": "AI-powered tools for educators",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/components/Panel/Panel.js"],
      "css": ["popup.css"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/**/*.js", "src/**/*.html", "src/**/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}